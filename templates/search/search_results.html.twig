    <section class="h-50">

   <h1>Résultats de la recherche pour "{{ query }}" :</h1>
{% if results %}
    <ul>
        {% set videoDisplayed = false %}
        {% for result in results %}
            {# Affichez la vidéo uniquement si c'est une vidéo et aucune vidéo n'a encore été affichée #}
            {% if result.url is defined and not videoDisplayed %}          
                <li>
                    <a href="{{ result.url }}" target="_blank">Voir la vidéo</a>
                </li>
                {% set videoDisplayed = true %}
            {% endif %}

            {# N'affichez pas le titre si c'est une vidéo #}
            {% if result.path is defined %}
                <li>{{ result.title }}</li>
            {% endif %}
            
            {# Affichez l'image uniquement si c'est une image #}
            {% if result.Image is defined and not result.url is defined  %}
                <li>
                    <img src="{{ asset('uploads/' ~ result.Image) }}" alt="{{ result.title }}" style="width: 150px; height: 150px;">
                </li>
            {% endif %}
        {% endfor %}
    </ul>
{% else %}
    <p>Aucun résultat trouvé.</p>
{% endif %}




