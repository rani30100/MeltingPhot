{% extends 'base.html.twig' %}

{% block body %}
	{% include 'component/navbar.html.twig' %}

	<section class=" d-flex justify-center">
		<section class="h-100 mt-5">
			{% for posts in page.post %}
				<section class="d-flex justify-center flex-column">
					<div class="d-flex justify-center align-items-center flex-column">
						<h1 class="text-center">Titre du Post :
							{{ post.title }}</h1>
						<p class="text-center w-50">{{ posts.description|raw }}</p>
					</div>


					{% if posts.images|length > 0 %}
						<div>
							<h3 class="text-center">Images associées à la page</h3>
							{% for image in posts.images  %}
								<img src="{{ asset('uploads/videos/images/' ~ image.path) }}" style=" max-height: 300px; margin: 5px;" alt="{{ image.title }}">
							{% endfor %}
						</div>
					{% endif %}
				</div>
				<br>
				{% if post.videoFile|length > 0 %}
					<div class="mb-5 text-center flex-column justify-content-center d-flex align-items-center">
						<h3>Videos Du post</h3>
						{% for video in post.videoFile  %}
							<iframe src="{{ video.url }}" frameborder="0" width="640" height="360"></iframe>
						{% endfor %}

					</div>
				{% endif %}

			</section>
		{% endfor %}

	</section>
</section>


{% include 'component/footer.html.twig' %}{% endblock %}
