{% extends 'base.html.twig' %}

{% block title %}Hello OrangeController!{% endblock %}

{% block styles %}
<style>
    /* Styles pour le livre numérique */
    .mon-livre {
        display: flex;
        align-items: center;
        flex-direction: column;
        margin-top: 50px;
    }

    .book {
        position: relative;
        width: 200px;
        height: 300px;
        perspective: 1000px;
    }

    .paper {
        position: absolute;
        width: 100%;
        height: 100%;
        transform-style: preserve-3d;
        transition: transform 1s;
    }

    .front-content,
    .back-content {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        box-sizing: border-box;
        padding: 20px;
        font-size: 16px;
        color: #fff;
        text-align: center;
    }

    .front-content {
        background-color: #3f51b5;
    }

    .back-content {
        background-color: #f44336;
        transform: rotateY(180deg);
    }

    .flip-btn {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        justify-content: space-between;
        width: 100px;
    }

    .prev-btn-flip,
    .next-btn-flip {
        cursor: pointer;
        background-color: #333;
        color: #fff;
        border: none;
        font-size: 24px;
        width: 40px;
        height: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
    }

    .prev-btn-flip:hover,
    .next-btn-flip:hover {
        background-color: #555;
    }

    /* Styles pour le zoom */
    .zoom-icon {
        position: absolute;
        bottom: 80px;
        right: 30px;
        cursor: pointer;
        background-color: #333;
        color: #fff;
        border: none;
        font-size: 24px;
        width: 40px;
        height: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
    }

    .zoom-icon:hover {
        background-color: #555;
    }

    .zoom-icon.active {
        background-color: #f44336;
    }

    .zoom-icon.active:hover {
        background-color: #ff5722;
    }
</style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Script pour le livre numérique

        // Variables
        let currentIndex = 0;
        const papers = document.querySelectorAll('.paper');
        const zoomIcon = document.querySelector('.zoom-icon');
        let zoomActive = false;

        // Fonction pour passer à la page suivante
        function nextPage() {
            if (currentIndex < papers.length - 1) {
                currentIndex++;
                updateBook();
            }
        }

        // Fonction pour passer à la page précédente
        function prevPage() {
            if (currentIndex > 0) {
                currentIndex--;
                updateBook();
            }
        }

        // Fonction pour mettre à jour l'affichage du livre
        function updateBook() {
            const rotationAngle = currentIndex * -180;
            document.querySelector('#book-container').style.transform = `translateX(25%) rotateY(${rotationAngle}deg)`;
        }

        // Fonction pour activer/désactiver le zoom
        function toggleZoom() {
            zoomActive = !zoomActive;
            zoomIcon.classList.toggle('active', zoomActive);
        }

        // Ajouter les écouteurs d'événements
        document.querySelector('.prev-btn-flip').addEventListener('click', prevPage);
        document.querySelector('.next-btn-flip').addEventListener('click', nextPage);
        zoomIcon.addEventListener('click', toggleZoom);
    </script>
{% endblock %}

{% block body %}
    <!-- Votre contenu ici -->

    <!-- Flipbook -->
    <section class="mon-livre">
        <div class="d-flex align-items-center flex-column">
            <div class="book" style="transform: translateX(25%);" id="book-container">
                {% for imagePath in imagePaths %}
                    <div class="paper p{{ loop.index }}">
                        <div class="front">
                            <div id="f{{ loop.index }}" class="front-content">
                                <img class="img" src="{{ asset('uploads/hébémag/' ~ imagePath) }}" alt="">
                            </div>
                        </div>
                        <div class="back">
                            <div id="b{{ loop.index }}" class="back-content">
                                <!-- Vous pouvez laisser cette partie vide si vous ne souhaitez pas afficher de texte au dos de l'image -->
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div style="margin-top: -125px;" class="d-flex justify-content-between flip-btn">
                <button class="prev-btn-flip" style="transform: translateX(45px);">
                    <i class="fas fa-arrow-circle-left"></i>
                </button>

                <button class="next-btn-flip" style="transform: translateX(-30px)">
                    <i class="fas fa-arrow-circle-right" aria-hidden="true" style="width: 55px;"></i>
                </button>
            </div>
        </div>
        <i class="fas btn fa-search zoom-icon loupe"></i>
    </section>
    <!-- Fin du Flipbook -->

{% endblock %}
