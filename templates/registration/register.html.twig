<body class="bg-white font-family-karla h-screen">
    <div class="w-full flex flex-wrap">
        <!-- Register Section -->
        <div class="w-full md:w-1/2 flex flex-col">
            <div class="flex justify-center md:justify-start pt-12 md:pl-12 md:-mb-12">
                <a href="#" class="bg-blue-600 text-white font-bold text-xl p-4" alt="Logo">Logo</a>
            </div>
         

            <div class="flex flex-col justify-center md:justify-start my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
                <p class="text-center text-xl ml-4">{{ 'join'|trans({}, 'register') }}</p>
                {% if errorMessage %}
                    <div class="alert alert-danger text-center">{{ errorMessage }}</div>
                {% endif %}

                {{ form_start(form, {
                    'attr': {
                        'class': 'flex flex-col pt-3',
                     
                    }
                }) }}

                <div class="flex flex-col">
					<label for="name" class="text-lg">{{ 'label.name'|trans({}, 'register') }}</label>
					{{ form_widget(form.username, {
						'attr': {
							'id': 'name',
							'placeholder': 'placeholder.name'|trans({}, 'register'),
							'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline'
						}
					}) }}
                </div> 

                <div class="flex flex-col pt-4">
					<label for="email" class="text-lg">{{ 'label.email'|trans({}, 'register') }}</label>
					{{ form_widget(form.email, {
						'attr': {
							'id': 'email',
							'placeholder': 'placeholder.email'|trans({}, 'register'),
							'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline'
						}
					}) }}
                </div>

                <div class="flex flex-col pt-4">

					<label for="password" class="text-lg">{{ 'label.password'|trans({}, 'register') }}</label>
					{{ form_widget(form.password, {
						'attr': {
							'id': 'password',
							'placeholder': 'placeholder.password'|trans({}, 'register'),
							'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline'
						}
					}) }}
                </div>

                {# <div class="flex flex-col pt-4">
