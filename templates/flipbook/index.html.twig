{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/flipbook/basic.css') }}">

{% endblock %}


{% block body %}
<script type="text/javascript" src="/js/flipbook/extras/jquery.min.1.7.js"></script>
<script type="text/javascript" src="/js/flipbook/extras/modernizr.2.5.3.min.js"></script>
<script type="text/javascript" src="/js/flipbook/lib/turn.js"></script>

<div class="flipbook-viewport">
	<div class="container"style="display:flex; justify-content:center;">
		<div class="flipbook"style="display:flex; justify-content:center;">
			<div style="background-image:url(/img/pages/1.jpg);height: inherit;background-size: contain;background-repeat: no-repeat;width:inherit;;height:inherit"></div>
			<div style="background-image:url(/img/pages/2.jpg);height: inherit;background-size: contain;background-repeat: no-repeat;width:300px;"></div>
			<div style="background-image:url(/img/pages/3.jpg);height: inherit;background-size: contain;background-repeat: no-repeat;width:300px;"></div>
		</div>
	</div>
</div>


<script type="text/javascript">

    function loadApp() {

        // Create the flipbook
        $('.flipbook').turn({
            // Width
            width: 922,
            // Height
            height: 600,
            // Elevation
            elevation: 50,
            // Enable gradients
            gradients: true,
            // Auto center this flipbook
            autoCenter: true
        });
    }
</script>


{% endblock %}
