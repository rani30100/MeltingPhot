  let employee1Info = {
    image: "{{asset('img/Contact/Abdeslam.png')}}",
    quote: "Citation du directeur",
    name: "Abdeslam Chaoui",
    job: "Direction Artistique",
    socialMedia: '<i class="fab fa-facebook-f team-social"></i><i class="fab fa-instagram team-social"></i>',
  };

  let employee2Info = {
    image: "{{asset('img/Contact/employe1.jpeg')}}",
    quote: "Citation de l'employé 1",
    name: "Sabrina Fiandaca",
    job: "Directrice de la Rédaction",
    socialMedia: '<i class="fab fa-facebook-f team-social"></i><i class="fab fa-instagram team-social"></i>',
  };

  let employee3Info = {
    image: "{{asset('img/Contact/employe2.jpeg')}}",
    quote: "Citation de l'employé 2",
    name: "Yann Riché",
    job: "Coaching Photo",
    socialMedia: '<i class="fab fa-facebook-f team-social"></i><i class="fab fa-instagram team-social"></i>',
  };

  // Par défaut, celle du directeur
  document.addEventListener("DOMContentLoaded", function() {
    updateEmployeeImageAndQuote(
      employee1Info.image,
      employee1Info.quote,
      employee1Info.name,
      employee1Info.job,
      employee1Info.socialMedia
    );
  });

  // Écouter l'événement de clic sur les employés
  directeur.addEventListener("click", function() {
    swapEmployeeInfo(employee1Info, employee2Info);
  });

  employee1.addEventListener("click", function() {
    swapEmployeeInfo(employee2Info, employee1Info);
  });

  employee2.addEventListener("click", function() {
    swapEmployeeInfo(employee3Info, employee2Info);
  });

  employee3.addEventListener("click", function() {
    swapEmployeeInfo(employee1Info, employee3Info);
  });

  // Fonction pour mettre à jour l'image et la citation
  function updateEmployeeImageAndQuote(imageSrc, quote, name, job, socialMedia) {
    employeeImage1.src = imageSrc;
    document.querySelector("#employeeQuote").textContent = quote;
    document.querySelector(".employeeName").textContent = name;
    document.querySelector(".employeeJob").textContent = job;
    // document.querySelector("#employeeSocialMedia1").innerHTML = socialMedia;
  }

  // Fonction pour échanger les informations entre les employés
  function swapEmployeeInfo(employeeInfo1, employeeInfo2) {
    let tempImage = employeeInfo1.image;
    let tempQuote = employeeInfo1.quote;
    let tempName = employeeInfo1.name;
    let tempJob = employeeInfo1.job;
    // let tempSocialMedia = employeeInfo1.socialMedia;

    employeeInfo1.image = employeeInfo2.image;
    employeeInfo1.quote = employeeInfo2.quote;
    employeeInfo1.name = employeeInfo2.name;
    employeeInfo1.job = employeeInfo2.job;
    employeeInfo1.socialMedia = employeeInfo2.socialMedia;

    employeeInfo2.image = tempImage;
    employeeInfo2.quote = tempQuote;
    employeeInfo2.name = tempName;
    employeeInfo2.job = tempJob;
    employeeInfo2.socialMedia = tempSocialMedia;

    updateEmployeeImageAndQuote(
      employeeInfo1.image,
      employeeInfo1.quote,
      employeeInfo1.name,
      employeeInfo1.job,
      employeeInfo1.socialMedia
    );
  }
</script>
